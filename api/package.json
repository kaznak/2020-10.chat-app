{
  "name": "api",
  "version": "0.0.0",
  "description": "API server of chat app",
  "main": "dist/app.js",
  "repository": "url",
  "author": "kaznak <kaznak.at.work@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^12.18.4"
  },
  "scripts": {
    "format": "prettier --write **.{md,json,js,ts}",
    "lint": "eslint --ext json --ext js --ext ts .",
    "type-check": "tsc --pretty --noEmit",
    "test": "jest",
    "build": "tsc --sourceMap --outDir ./dist src/**.ts",
    "start": "node -r ts-node/register ./src/app.ts",
    "start:watch": "nodemon",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@types/prettier": "^2.1.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": "tsc --pretty --noEmit",
    "*.(json|js|ts)": "eslint",
    "*.(json|js|ts|md)": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run type-check && npm run test"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
